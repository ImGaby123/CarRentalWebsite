@{
    ViewData["Title"] = "Home";
}
<link rel="stylesheet" href="~/Customer/css/home.css" />

<div class="container">
    <div class="header">
        <h1>Our Cars</h1>
        <h3>Check our group categories</h3>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="card shadow">
