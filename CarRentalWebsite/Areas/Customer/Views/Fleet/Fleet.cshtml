@using CarRentalWebsite.Areas.Customer.Helpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/Customer/css/fleet.css" />
</head>
<body>
    <header>
        <div class="top-container">
            <div class="main-text">
                <h1>OUR FLEET</h1>
                <p>Browse our collection of well-maintained and clean vehicles.</p>
            </div>
        </div>
    </header>

    <main>
        <div class="filter-car">
            <p>
                Sort by
            </p>
        </div>
        <div class="bottom-container">

            @foreach (var car in Model)
            {
                <div class="product-container">
                    <div class="product-info">
                        <div class="product-name">
                            <h2><strong>@car.CarModel @car.CarTransmission</strong></h2>
                        </div>
                        <div class="car-icons-flex">
                               <p class = car-icons-number><img src="@Url.Content("~/Customer/img/car_door.png")"/></p>
                               <p class = car-icons-number>@car.CarDoor</p>
                               <p class = car-icons-number><img src="@Url.Content("~/Customer/img/car_seat.png")"/></p>
                               <p class = car-icons-number>@car.CarSeat</p>
                               <p class = car-icons-number><img src="@Url.Content("~/Customer/img/car_baggage.png")"/></p>
                               <p class = car-icons-number>@car.CarBaggage</p>
                        </div>
                            <h4><strong>Price:  </strong>₱ @car.CarPrice</h4>
                        <h4><strong>Car Category: </strong></h4>
                        <p>@car.CarCategory.</p>
                        <h4><strong>Top Feature:</strong></h4>
                        <p>@car.CarTopFeature.</p>
                        <h4><strong>Safety:</strong></h4>
                        <p>@car.CarSafety</p>
                        <button class="btn">Button</button>
                    </div>
                    <div class="image-placeholder">
                        <div class="img-box">
                            @Html.ImageWithSize(Url.Content((string)car.CarImage), alt: "CarImage")
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>
</body>
</html>
